<div id="wrapper">
  <div id="time-panel" style="width: <%= @selection.width %>px;">
    <div class="line">
      <% @selection.top.each do |card| %>
        <%= render :partial => 'selected', :locals => {:card => card} %>
      <% end %>
    </div>
    <div class="line">
      <% @selection.bottom.each do |card| %>
        <%= render :partial => 'selected', :locals => {:card => card} %>
      <% end %>
    </div>
  </div>
</div>